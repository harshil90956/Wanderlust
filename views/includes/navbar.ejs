<style>
  /*            Navbar              */
  @media (max-width: 991.98px) {
    .navbar-expand-md .navbar-collapse.show {
      background-color: #fff; /* Adjust the color as needed */
      z-index: 1000;
    }
  }

  /* Base styles */
  .btn-search {
    background-color: #fe424d;
    color: #fff;
    z-index: 1;
    border-radius: 25px;
    padding: 0 1rem 0 1rem;
  }

  .btn-search:hover {
    background-color: #fe424d;
    z-index: 1;
    color: #fff;
  }

  .btn-search i {
    display: inline;
    margin-right: 0.5rem;
  }

  .search-inp {
    padding: 0.5rem 3rem 0.5rem 3rem;
    border-radius: 25px;
  }

  /* Responsive styles */
  @media (max-width: 767px) {
    .navbar-nav {
      flex-direction: column;
    }

    .navbar-nav.ms-auto {
      margin-top: 1rem;
    }

    .navbar-brand {
      margin-right: auto;
    }

    .navbar-toggler {
      margin-left: auto;
    }

    .search-inp {
      width: 100%;
      margin-bottom: 0.5rem;
    }
  }
</style>

<nav
  class="navbar navbar-expand-md bg-body-light border-bottom sticky-top"
  style="height: 60px">
  <div class="container-fluid">
    <a class="navbar-brand" href="/listings"
      ><i class="fa-regular fa-compass"></i
    ></a>
    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      aria-expanded="false"
      data-bs-target="#navbarNavAltMarkup"
      aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
      <span class="navbar-toggle-label">Click this button</span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-link" href="/listings">Explore</a>
      </div>

      <div class="navbar-nav ms-auto">
        <form
          class="d-flex"
          role="search"
          method="GET"
          action="/listings/category">
          <input
            class="form-control me-2 search-inp"
            type="search"
            placeholder="Search destination"
            aria-label="Search"
            id="searchInput"
            name="category" />
          <button class="btn btn-search" type="submit">
            <i class="fa-solid fa-magnifying-glass"></i>Search
          </button>
        </form>
      </div>

      <div class="navbar-nav ms-auto">
        <div class="form-check-reverse form-switch">
          <label class="form-check-label" for="flexSwitchCheckDefault"
            >Display total after taxes</label
          >
          <input
            class="form-check-input"
            type="checkbox"
            role="switch"
            id="flexSwitchCheckDefault" />
        </div>
        <a class="nav-link" href="/listings/new"><b>Airbnb your home</b></a>
        <% if(!currUser){ %>
        <a class="nav-link" href="/signup"><b>Sign up</b></a>
        <a class="nav-link" href="/login"><b>Log in</b></a>
        <%}%> <% if(currUser) {%>
        <a class="nav-link" href="/logout"><b>Log out</b></a>
        <% } %>
      </div>
    </div>
  </div>
</nav>
