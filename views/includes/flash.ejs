<% if(success && success.length) { %>
  <div class="alert alert-dismissible fade show col-lg-6 col-md-8 col-sm-10 offset-lg-3 offset-md-2 offset-sm-1 alert-custom alert-success-custom" role="alert">
      <%= success %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% } %>

<% if(error && error.length) { %>
  <div class="alert alert-dismissible fade show col-lg-6 col-md-8 col-sm-10 offset-lg-3 offset-md-2 offset-sm-1 alert-custom alert-danger-custom" role="alert">
      <%= error %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% } %>
