<% layout("/layouts/boilerplate") -%>

<div class="container">
  <div class="row mt-3">
    <div class="col-lg-12 text-center"> <!-- Center the content -->
      <h1>SignUp On Wanderlust</h1>
    </div>
    <div class="col-lg-6 col-md-8 col-sm-10 col-12 offset-lg-3 offset-md-2 offset-sm-1">
      <form method="POST" action="/signup" class="needs-validation" novalidate>
        <div class="mb-3">
          <label for="username" class="form-label">Username</label>
          <input name="username" id="username" type="text" class="form-control" required>
          <div class="valid-feedback">Looks Good!</div>
        </div>
        <div class="mb-3">
          <label for="email" class="form-label">Email</label>
          <input name="email" id="email" type="email" class="form-control" required> <!-- Change type to email -->
          <div class="valid-feedback">Looks Good!</div>
        </div>
        <div class="mb-3">
          <label for="password" class="form-label">Password</label>
          <input name="password" id="password" type="password" class="form-control" required>
          <div class="valid-feedback">Looks Good!</div>
        </div>
        <button class="btn btn-success">SignUp</button>
      </form>
    </div>
  </div>
</div>
